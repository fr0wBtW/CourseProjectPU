<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/freelance"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/euName"
        android:hint="Въведете име"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        >
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/euPosition"
        android:hint="Въведете предлаганата длъжност"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        >
    </EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/euDescribeOffer"
        android:hint="Опишете услугата"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        >
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/euTel"
        android:inputType="phone"
        android:hint="Въведете телефон"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        >
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/euEmail"
        android:inputType="textEmailAddress"
        android:hint="Въведете Email"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        >
    </EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Актуализирай"
        android:id="@+id/btnUpdate"></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Изтрий"
        android:id="@+id/btnDelete"></Button>


</LinearLayout>